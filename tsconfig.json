{
  "compilerOptions": {

    "target": "es2016",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,    
    "strict": true,    
    "skipLibCheck": true,    
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,                 // setting it to true ---> generates .map files
    "outDir": "dist23",                 // JS files gets stored here
    "baseUrl": ".",
    "paths": {
      "*": [ "node_modules/*" ]
    }    
  },
  "include": [    // compile any files ending with .ts it finds in the src folder, and store the results in a folder named dist23
    "src/**/*"
  ]
}


